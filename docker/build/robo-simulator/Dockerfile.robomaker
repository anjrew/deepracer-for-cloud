FROM awsdeepracercommunity/deepracer-robomaker:5.1.1-cpu-avx2

# Install necessary packages including Git and DKMS
RUN apt-get update \
    && apt-get install -y dkms usbutils evtest input-utils iputils-ping \
    && rm -rf /var/lib/apt/lists/*

# Install required Python packages
RUN pip install --no-cache-dir \
        pygame requests

COPY ./start.sh /start.sh

COPY ./rl_coach_agent.py /usr/local/lib/python3.6/dist-packages/rl_coach/agents/agent.py
COPY ./training_image_editing.py /opt/install/deepracer_simulation_environment/lib/python2.7/dist-packages/mp4_saving/training_image_editing.py
COPY ./agents_video_editor.py /opt/install/deepracer_simulation_environment/lib/python2.7/dist-packages/mp4_saving/agents_video_editor.py
COPY ./virtual_event_video_editor.py /opt/install/deepracer_simulation_environment/lib/python2.7/dist-packages/mp4_saving/virtual_event_video_editor.py



